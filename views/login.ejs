<body>
    <%- include('partials/header.ejs')%>
    <form action="/users/login" method="POST" class="formLogin">
        <div class="formContent">
            <img src="/img/logoBlack.png" alt="">

            <h2>Welcome</h2>

            <div class="divForm">
                <input class="barra" type="text" name="email" placeholder="email"  value="<%=locals.old && old.email ? old.email: '' %>">
                <div class="errorMsg">
                    <% if (locals.errors && errors.email) {%> 
                        <p class="error"><%= errors.email.msg%> <i class="fa-solid fa-circle-exclamation"></i></p>
                    <% } %>

                    <% if (locals.errors && errors.validationUser) {%> 
                        <p class="error"><%= errors.validationUser.msg%> <i class="fa-solid fa-circle-exclamation"></i></p>
                    <% } %> 
                </div>
            </div>

            <div class="divForm">
                <input class="barra" type="password" name="password" placeholder="Password">
                <div class="errorMsg">
                    <% if (locals.errors && errors.password) {%> 
                        <p class="error"><%= errors.password.msg%> <i class="fa-solid fa-circle-exclamation"></i></p> 
                    <% } %>

                    <% if (locals.errors && errors.validationPassword) {%> 
                        <p class="error"><%= errors.validationPassword.msg%> <i class="fa-solid fa-circle-exclamation"></i></p>
                    <% } %>                
                 </div>
            </div>

            <div class="divForm">
            <label for="remember">Remember me</label>
            <input class ="checkbox" type="checkbox" name="remember" id="">            
            </div>

            <div class="divForm">
                <a class="reestablecerContrasena" href="/users/restorepassword">Forgot your password?</a>
            </div>

            <div class="divForm">
                <a class="register" href="/users/signup">Register</a>
            </div>

            <div class="divForm">
                <a class="textBoton"><button class="boton" type="submit">Log in</button></a>
            </div>
        </div>
    </form>

   
